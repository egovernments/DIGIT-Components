import { AppContainer, BreadCrumb, PrivateRoute } from "@egovernments/digit-ui-react-components";
import React from "react";
import { useTranslation } from "react-i18next";
import { Switch } from "react-router-dom";
import Response from "./Response";
import {{properCase moduleName}}Create from "./{{properCase moduleName}}Create";
import {{properCase moduleName}}Search from "./{{properCase moduleName}}Search";

const ProjectBreadCrumb = ({ location }) => {
  const { t } = useTranslation();
  const crumbs = [
    {
      path: `/${window?.contextPath}/employee`,
      content: t("HOME"),
      show: true,
    },
    {
      path: `/${window?.contextPath}/employee`,
      content: t(location.pathname.split("/").pop()),
      show: true,
    },
  ];
  return <BreadCrumb crumbs={crumbs} spanStyle={{ maxWidth: "min-content" }} />;
};

const App = ({ path, stateCode, userType, tenants }) => {
  return (
    <Switch>
      <AppContainer className="ground-container">
        <React.Fragment>
          <ProjectBreadCrumb location={location} />
        </React.Fragment>
        <PrivateRoute path={`${path}/{{kebabCase moduleName}}-response`} component={() => <Response></Response>} />
        <PrivateRoute path={`${path}/{{kebabCase moduleName}}-create`} component={() => <{{properCase moduleName}}Create />} />
        <PrivateRoute path={`${path}/{{kebabCase moduleName}}-search`} component={() => <{{properCase moduleName}}Search></{{properCase moduleName}}Search>} />
      </AppContainer>
    </Switch>
  );
};

export default App;
